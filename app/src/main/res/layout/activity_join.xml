<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"><![CDATA[
    //xmlns:android="http://schemas.android.com/apk/res/android:"android"라는 변수에
    "http://schemas.android.com/apk/res/android" 위치에 있는 android 라이브러리를 지정하였고,id 속성을 가져와서 지정
    LinearLayout android:id> /LinearLayout>을 호출하는 대신 사용
    //match_partent : 크기에 상관없이 핸드폰 크기에 맞추어서 화면 전체가 꽉 참
    //#FFFFFF : 흰 색
    // rotationX : 회전 -> 배경 제외가 회전

    //@+id : 새로 추가(+)하는 리소스 아이디 (객체개념)
    //wrap_content : 폭과 높이가 글자가 꼭 들어갈 정도로 설정
    //marginBottom : 바깥 여백
    // constraintBottom_toTopOf : 현재 뷰 아래쪽을 (=)뷰의 위에 맞추는 설정
    23 : 회원가입 밑부분을 이름 위에 위치
    24 : 회원가입 끝(오른쪽)을 끝으로 배치
    25 : 회원가입 시작(왼쪽)을 시작으로



    ]]>

    <EditText
        android:id="@+id/join_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="아이디"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/join_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/join_number"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:ems="10"
        android:hint="휴대폰 번호"
        android:inputType="number"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/join_password"
        app:layout_constraintEnd_toStartOf="@+id/check_button"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="@+id/join_id" />

    <Button
        android:id="@+id/check_button"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:scrollbars="vertical"
        android:text="인증확인"
        app:layout_constraintEnd_toEndOf="@+id/join_name"
        app:layout_constraintTop_toBottomOf="@+id/join_name" />

    <EditText
        android:id="@+id/join_numbercheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="인증번호확인"
        android:inputType="number"
        android:scrollbars="vertical"
        app:layout_constraintStart_toStartOf="@+id/join_number"
        app:layout_constraintTop_toBottomOf="@id/join_number" />

    //ems : 너비


    <EditText
        android:id="@+id/join_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:hint="이름"
        android:inputType="text"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/join_number"
        app:layout_constraintEnd_toEndOf="@+id/join_id"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/join_id" />

    <EditText
        android:id="@+id/join_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/join_pwck"
        app:layout_constraintStart_toStartOf="@+id/join_numbercheck" />

    <EditText
        android:id="@+id/join_pwck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        android:ems="10"
        android:hint="비밀번호 확인"
        android:inputType="textPassword"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/join_password" />


    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="32dp"
        android:text="약관 전체동의 "
        app:layout_constraintEnd_toStartOf="@+id/join_button"
        app:layout_constraintStart_toStartOf="@+id/rrn"
        app:layout_constraintTop_toBottomOf="@+id/rrn" />

    <Button
        android:id="@+id/terms_of_use"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:layout_marginStart="44dp"
        android:ems="10"
        android:hint="이용약관 보기"
        android:inputType="textPassword"
        android:textSize="10sp"
        android:onClick="OnClickHandler"
        app:layout_constraintBaseline_toBaselineOf="@+id/checkBox1"
        app:layout_constraintStart_toEndOf="@+id/checkBox1"
        />

    <Button
        android:id="@+id/join_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:scrollbars="vertical"
        android:text="회원가입 하기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/terms_of_use" />

    <EditText
        android:id="@+id/rrn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="108dp"
        android:ems="20"
        android:hint="주민등록번호"
        android:inputType="numberPassword"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/join_pwck"
        app:layout_constraintHorizontal_bias="0.585"
        app:layout_constraintStart_toStartOf="@+id/join_pwck"
        app:layout_constraintTop_toBottomOf="@+id/join_pwck" />
</androidx.constraintlayout.widget.ConstraintLayout>